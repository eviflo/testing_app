<h1 class="text-xs-center">My posts</h1>
<p id="notice"><%= notice %></p>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
    <div> <% if post.image_url(:small) %><%= image_tag post.image_url(:small) %><% end %></div>
    <h3><%= post.title %></h3>
    <p><%= post.body %></p>

    <p><%= post.created_at.strftime("%Y/%m/%d, %I:%M%p") %></p>

    <p><%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} %>
    </p>

    </div>
  <% end %>
  </div>
  <h4><%= link_to 'New Post', new_post_path %></h4